<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      
      <th>Body</th>
      
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= @blog.title %>
      </td>
      <td>
        <%= @blog.body %>
      </td>
    </tr>
  </tbody>
</table>

<%= form_with model: @blog, url:'/index', local:true do |f| %>
  <h2>Title<h2>
  <%= f.text_field :title %>
  <h2>Body</h2>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>